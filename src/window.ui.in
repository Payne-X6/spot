<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <object class="AdwApplicationWindow" id="window">
    <property name="default-width">1080</property>
    <property name="default-height">720</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkShortcutController">
            <property name="scope">local</property>
            <child>
              <object class="GtkShortcut">
                <property name="trigger">space</property>
                <property name="action">action(app.toggle_playback)</property>
              </object>
            </child>
            <child>
              <object class="GtkShortcut">
                <property name="trigger">&lt;Ctrl&gt;Q</property>
                <property name="action">action(app.quit)</property>
              </object>
            </child>
            <child>
              <object class="GtkShortcut">
                <property name="trigger">&lt;Alt&gt;P</property>
                <property name="action">action(app.player_prev)</property>
              </object>
            </child>
            <child>
              <object class="GtkShortcut">
                <property name="trigger">&lt;Alt&gt;N</property>
                <property name="action">action(app.player_next)</property>
              </object>
            </child>
            <child>
              <object class="GtkShortcut">
                <property name="trigger">&lt;Alt&gt;Left</property>
                <property name="action">action(app.nav_pop)</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwHeaderBar" id="header_bar">
            <child type="title">
              <object class="GtkLabel" id="selection_label">
                <property name="visible">0</property>
                <property name="label" translatable="yes" comments="This text appears when entering selection mode. It should be as short as possible.">No song selected</property>
                <property name="ellipsize">end</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="nav_back">
                <property name="receives-default">1</property>
                <property name="halign">start</property>
                <property name="valign">center</property>
                <property name="icon-name">go-previous-symbolic</property>
                <property name="has-frame">0</property>
              </object>
            </child>
            <child>
              <object class="GtkToggleButton" id="search_button">
                <property name="receives-default">1</property>
                <property name="icon-name">system-search-symbolic</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkMenuButton" id="user">
                <property name="receives-default">1</property>
                <property name="icon-name">open-menu-symbolic</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkToggleButton" id="selection_toggle">
                <property name="receives-default">1</property>
                <property name="icon-name">object-select-symbolic</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkSearchBar" id="search_bar">
            <property name="show-close-button">1</property>
            <child>
              <object class="GtkSearchEntry" id="search_entry"/>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwLeaflet" id="leaflet">
            <property name="vexpand">1</property>
            <property name="visible-child">main</property>
            <property name="interpolate-size">1</property>
            <child>
              <object class="AdwLeafletPage">
                <property name="navigatable">0</property>
                <property name="child">
                  <object class="GtkStackSidebar" id="home_stack_sidebar">
                    <property name="width-request">200</property>
                    <property name="vexpand">1</property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="AdwLeafletPage">
                <property name="name">main</property>
                <property name="child">
                  <object class="GtkOverlay" id="main">
                    <property name="hexpand">1</property>
                    <property name="vexpand">1</property>
                    <child>
                      <object class="GtkStack" id="navigation_stack">
                        <property name="transition-type">slide-left-right</property>
                      </object>
                    </child>
                    <child type="overlay">
                      <object class="GtkBox" id="notification">
                        <property name="halign">center</property>
                        <property name="valign">start</property>
                        <property name="spacing">10</property>
                        <child>
                          <object class="GtkLabel" id="notification_content">
                            <property name="label">Information</property>
                            <property name="wrap">1</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="close_notification">
                            <property name="receives-default">1</property>
                            <property name="icon-name">window-close-symbolic</property>
                          </object>
                        </child>
                        <style>
                          <class name="app-notification"/>
                          <class name="notification"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkScale" id="seek_bar">
            <property name="show-fill-level">1</property>
            <property name="restrict-to-fill-level">0</property>
            <property name="fill-level">0</property>
            <property name="digits">0</property>
            <property name="value-pos">left</property>
            <style>
              <class name="seek-bar"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkGrid">
            <property name="margin-start">4</property>
            <property name="margin-end">4</property>
            <property name="margin-top">8</property>
            <property name="margin-bottom">8</property>
            <property name="hexpand">1</property>
            <property name="column-homogeneous">1</property>
            <child>
              <object class="AdwSqueezer">
                <property name="halign">start</property>
                <property name="homogeneous">True</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">0</property>
                </layout>
                <child>
                  <object class="GtkButton" id="now_playing">
                    <property name="receives-default">1</property>
                    <property name="halign">start</property>
                    <property name="valign">center</property>
                    <property name="has-frame">0</property>
                    <child>
                      <object class="GtkBox">
                        <property name="halign">center</property>
                        <child>
                          <object class="GtkImage" id="playing_image">
                            <property name="width-request">40</property>
                            <property name="height-request">40</property>
                            <property name="icon-name">emblem-music-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="current_song_info">
                            <property name="width-request">100</property>
                            <property name="halign">start</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <property name="label" translatable="yes" comments="Short text displayed instead of a song title when nothing plays">No song playing</property>
                            <property name="use-markup">1</property>
                            <property name="ellipsize">middle</property>
                            <property name="lines">1</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="now_playing_small">
                    <property name="receives-default">1</property>
                    <property name="halign">start</property>
                    <property name="valign">center</property>
                    <property name="has-frame">0</property>
                    <child>
                      <object class="GtkImage" id="playing_image_small">
                        <property name="width-request">40</property>
                        <property name="height-request">40</property>
                        <property name="icon-name">emblem-music-symbolic</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="halign">center</property>
                <property name="spacing">8</property>
                <property name="homogeneous">1</property>
                <layout>
                  <property name="column-span">2</property>
                  <property name="column">1</property>
                  <property name="row">0</property>
                </layout>
                <child>
                  <object class="GtkButton" id="prev">
                    <property name="receives-default">1</property>
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                    <property name="has-frame">0</property>
                    <property name="icon-name">media-skip-backward-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="play_pause">
                    <property name="receives-default">1</property>
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                    <property name="icon-name">media-playback-start-symbolic</property>
                    <style>
                      <class name="circular"/>
                      <class name="playback-button"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="next">
                    <property name="receives-default">1</property>
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                    <property name="has-frame">0</property>
                    <property name="icon-name">media-skip-forward-symbolic</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="halign">end</property>
                <property name="margin-start">4</property>
                <property name="margin-end">4</property>
                <property name="margin-top">4</property>
                <property name="margin-bottom">4</property>
                <layout>
                  <property name="column">3</property>
                  <property name="row">0</property>
                </layout>
                <child>
                  <object class="GtkLabel" id="track_position">
                    <property name="sensitive">0</property>
                    <property name="label">0:00</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="track_duration">
                    <property name="sensitive">0</property>
                    <property name="label"> / 0:00</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
  <object class="GtkAboutDialog" id="about">
    <property name="modal">1</property>
    <property name="destroy-with-parent">1</property>
    <property name="transient-for">window</property>
    <property name="program-name">Spot</property>
    <property name="version">@VERSION@</property>
    <property name="website">https://github.com/xou816/spot</property>
    <property name="authors">@AUTHORS@</property>
    <property name="translator-credits">@TRANSLATORS@</property>
    <property name="logo-icon-name">dev.alextren.Spot</property>
    <property name="license-type">mit-x11</property>
  </object>
</interface>
